<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/editTextTeamName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre del equipo"/>

    <EditText
        android:id="@+id/editTextTeamLogoUrl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="URL del escudo"/>

    <Button
        android:id="@+id/buttonSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guardar" />

    <Button
        android:id="@+id/buttonRegisterMatchups"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registrar Enfrentamientos"/>

    <Button
        android:id="@+id/buttonListMatchups"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Listado de Enfrentamientos"/>
</LinearLayout>
